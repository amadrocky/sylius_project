{% extends '@SyliusShop/Checkout/layout.html.twig' %}


{% block title %}Subscription
{% endblock %}

{% block content %}
	<h1 class="mb-4" style="font-weight: bold">Subscription</h1>
	<h3>Make your choice</h3>
	<form action="{{ path('payment_process') }}" id="card_form" method="post" class="card m-3 p-3 bg-secondary" style="width: 18rem;">
		<input type="text" class="form-control" placeholder="example@example.com" name="email">
		<input type="number" class="form-control my-1" placeholder="4242424242424242" name="card_number">
		<div class="d-flex">
			<input type="number" placeholder="MMYY" class="form-control" name="card_exp">
			<input type="number" placeholder="CVC" class="form-control" name="card_cvc">
		</div>
	</form>
	<div class="row mb-5">
		<div class="col">
			<div class="card">
				<svg class="bd-placeholder-img card-img-top" width="100%" height="180" xmlns="http://www.w3.org/2000/svg" aria-label="Placeholder: Image cap" preserveaspectratio="xMidYMid slice" role="img">
					<title>Placeholder</title><rect width="100%" height="100%" fill="#868e96"/><text x="20%" y="50%" fill="#dee2e6" dy=".3em" style="font-size: 50px">6 months</text>
				</svg>

				<div class="card-body">
					<p class="card-text">Six month subsription.</p>
				</div>
				<div class="card-footer text-center">
					<a href="/payment/process?period=6" class="ui large primary button" onclick="submit()">Suscribe</a>
				</div>
			</div>
		</div>
		<div class="col">
			<div class="card">
				<svg class="bd-placeholder-img card-img-top" width="100%" height="180" xmlns="http://www.w3.org/2000/svg" aria-label="Placeholder: Image cap" preserveaspectratio="xMidYMid slice" role="img">
					<title>Placeholder</title><rect width="100%" height="100%" fill="#868e96"/><text x="15%" y="50%" fill="#dee2e6" dy=".3em" style="font-size: 50px">12 months</text>
				</svg>

				<div class="card-body">
					<p class="card-text">Twelve month subsription.</p>
				</div>
				<div class="card-footer text-center">
					<a href="#" class="ui large primary button">Suscribe</a>
				</div>
			</div>
		</div>
		<div class="col">
			<div class="card">
				<svg class="bd-placeholder-img card-img-top" width="100%" height="180" xmlns="http://www.w3.org/2000/svg" aria-label="Placeholder: Image cap" preserveaspectratio="xMidYMid slice" role="img">
					<title>Placeholder</title><rect width="100%" height="100%" fill="#868e96"/><text x="15%" y="50%" fill="#dee2e6" dy=".3em" style="font-size: 50px">24 months</text>
				</svg>

				<div class="card-body">
					<p class="card-text">Twenty-four month subscription.</p>
				</div>
				<div class="card-footer text-center">
					<a href="#" class="ui large primary button">Suscribe</a>
				</div>
			</div>
		</div>
	</div>

	<script type="text/javascript">
		var form = document.getElementById("card_form")

		function submit() {
			form.submit();
		}
	</script>
{% endblock %}
